{
  "name": "@spirit-protocol/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Spirit Protocol - economic sovereignty for AI agents",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "require": "./dist/mcp/index.js",
      "import": "./dist/mcp/index.mjs"
    }
  },
  "files": [
    "dist",
    "abis"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/mcp/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/mcp/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "spirit-protocol",
    "ai-agents",
    "web3",
    "blockchain",
    "base",
    "ethereum",
    "agent-economics",
    "mcp",
    "claude"
  ],
  "author": "Spirit Protocol <team@spiritprotocol.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spirit-protocol/spirit-sdk.git"
  },
  "homepage": "https://spiritprotocol.io/developers",
  "bugs": {
    "url": "https://github.com/spirit-protocol/spirit-sdk/issues"
  },
  "dependencies": {
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": ">=0.30.0",
    "@modelcontextprotocol/sdk": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@modelcontextprotocol/sdk": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
